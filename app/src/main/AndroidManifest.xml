<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.covifighter">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_covid"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.ChatActivity" />
        <activity android:name=".ui.AboutActivity" />
        <activity android:name=".ui.CoronaActivity" />
        <activity android:name=".ui.CheckYourselfActivity" />
        <activity android:name=".ui.QuarantineRulesActivity" />
        <activity android:name=".ui.YouAreFineActivity" />
        <activity android:name=".ui.YouAreSickActivity" />
        <activity
            android:name=".ui.TesterAdvices"
            android:label="@string/advices" />
        <activity android:name=".ui.YourAllarms" />
        <activity android:name=".ui.Home" />
        <activity android:name=".NotificationMessage"></activity>
        <activity
            android:name=".ui.splashScreen"
            android:theme="@style/AppTheme.noActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".CreateEvent" />

        <receiver android:name=".AlarmBrodcast" />
        <receiver
            android:name=".BootUpReceiver"
            android:enabled="true">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </receiver>

        <activity android:name=".MainActivity" />

    </application>

</manifest>